
WITH_TRA "%ascension_tra_loc%/english/ascension.tra" "%ascension_tra_loc%/%LANGUAGE%/ascension.tra" BEGIN


////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Install the BWS resources as a baseline, they're pretty solid and I don't want to risk breaking the code
////////////////////////////////////////////////////////////////////////////////////////////////////////////////

INCLUDE "ascension/lib/ascension_resources_bws.tpa"
LAF ascension_resources_bws END

////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Fixes/tweaks to BWS resources can go here
////////////////////////////////////////////////////////////////////////////////////////////////////////////////



////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Compile the dialogs (here we avoid old AUTO_TRA, which requires a little creativity)
////////////////////////////////////////////////////////////////////////////////////////////////////////////////

COPY ".../stratagems-inline/blank" "%workspace%/all_dialogs.d"

WITH_SCOPE BEGIN
   ACTION_BASH_FOR "ascension/ascensionmain/d" ".*\.d" BEGIN
      LOAD_TRA  "%ascension_tra_loc%/english/%BASH_FOR_RES%.tra" "%ascension_tra_loc%/%LANGUAGE%/%BASH_FOR_RES%.tra"
      COPY "%workspace%/all_dialogs.d" "%workspace%" APPEND_FILE "%BASH_FOR_FILESPEC%"
   END
   COMPILE "%workspace%/all_dialogs.d"
END

////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Pro tem, install the BWS scripts
////////////////////////////////////////////////////////////////////////////////////////////////////////////////

INCLUDE "ascension/lib/ascension_scripts_bws.tpa"
LAF ascension_scripts_bws END


END
